#include "rayrenderer.h"
void RayRenderer::initRenderData(){
}
void RayRenderer::initRenderData(std::array<float, raynum> &distance, std::array<int, raynum> &color)
{   
    unsigned int VBO; 
    ColorSettings colors;
    float rayoffset = -80;
    float **rayarray = new float*[raynum];
 for(int i = 0; i<2;i++){
        rayarray[i]  = new float[12];
    for(int j = 0; j<12; j++){ 
        rayarray[i][j] = -1.0f+(i*(0.00625));
        rayarray[i][j+1] = 1.0f-0.35;
        rayarray[i][j+2] = 0.0001f;
        if(color[i] == 1){
            rayarray[i][j+3] = colors.brown[0];
            rayarray[i][j+4]= colors.brown[1];
            rayarray[i][j+5] = colors.brown[2];
        }
        else if(color[i]==0){
            rayarray[i][j+3] = colors.darkbrown[0];
            rayarray[i][j+4]= colors.darkbrown[1];
            rayarray[i][j+5] = colors.darkbrown[2];
            
        }

        
        rayvertex[i+6] = rayvertex[i]; 
        rayvertex[i+7] = 1.0f-((((0.03125)/distance[i])*cos((rayoffset/360)*2*M_PI)));
        rayvertex[i+8] = 0.0001f;
        rayvertex[i+9] = rayvertex[i+3];
        rayvertex[i+10] = rayvertex[i+4];
        rayvertex[i+11] = rayvertex[i+5];
        rayoffset= rayoffset+1;
    }
    }
    glGenVertexArrays(1, &this->quadVAO); //THIS GOES FIRST
    glBindVertexArray(this->quadVAO);
        
    glGenBuffers(1, &VBO);

    glBindBuffer(GL_ARRAY_BUFFER, VBO);
    glBufferData(GL_ARRAY_BUFFER, sizeof(float)*12*raynum, rayvertex, GL_DYNAMIC_DRAW);
//have to make sure sizeof(vertices) is correct or else it wont show

    glVertexAttribPointer(0, 3, GL_FLOAT, GL_FALSE, 6 * sizeof(float), (void*)0);
glEnableVertexAttribArray(0);
    glVertexAttribPointer(1, 3, GL_FLOAT, GL_FALSE, 6 * sizeof(float), (void*)(3*sizeof(float)));
glEnableVertexAttribArray(1);
        delete[] rayvertex;
    rayvertex= NULL;
  glBindBuffer(GL_ARRAY_BUFFER, 0);
    glBindVertexArray(0); 


}

void RayRenderer::DrawObject()
{
    this->shader.use();
    glBindVertexArray(this->quadVAO);
    glLineWidth(10);
    // for(int i = 0; i< 2;i++){
    // glDrawArrays(GL_LINES,(i),((i+2)));
    // }
    glDrawArrays(GL_LINES,0,2);
    // glDrawArrays(GL_LINES,2,2);
    glBindVertexArray(0);
}

